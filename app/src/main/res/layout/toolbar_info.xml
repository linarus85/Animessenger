<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_toolbar"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/sakura"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_username_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginStart="@dimen/default_margin"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/profile_image_toolbar"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Linar Gainet" />

    <TextView
        android:id="@+id/tv_status_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/md_green_200"
        android:layout_marginStart="@dimen/default_margin"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/profile_image_toolbar"
        app:layout_constraintTop_toBottomOf="@+id/tv_username_toolbar"
        tools:text="@string/online" />

</androidx.constraintlayout.widget.ConstraintLayout>